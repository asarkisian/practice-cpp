#include "Register.h"

void registerSoftware::inputRegister(){
		ifstream fin;
		fin.open("key.txt", ios::in);
		if(fin){
			fin >> RegisteredSoftware;
		}
}

void registerSoftware::outputRegister(){
		 ofstream fout;
		 fout.open("key.txt", ios::out);
		 fout << RegisteredSoftware;
		 fout.close();
}

void registerSoftware::registerComplete(){
	RegisteredSoftware = 1;
}

void registerSoftware::registerIncomplete(){
	RegisteredSoftware = 0;
}

bool registerSoftware::validateRegistration()const{
	if(!RegisteredSoftware){
		return 0;
	}
	else if(RegisteredSoftware){
		return 1;
	}
}

 