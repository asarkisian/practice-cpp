//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Login.h"
#include "Main.h"

//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TfrmMain *frmMain;
//---------------------------------------------------------------------------
__fastcall TfrmMain::TfrmMain(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------

void __fastcall TfrmMain::tmrMainTimer(TObject *Sender)
{
        if(txtMovieName->Focused()) txtMovieName->Color = clYellow;
        else txtMovieName->Color = clWhite;
        if(txtMovieArtist->Focused()) txtMovieArtist->Color = clYellow;
        else txtMovieArtist->Color = clWhite;
        if(txtMovieDirector->Focused()) txtMovieDirector->Color = clYellow;
        else txtMovieDirector->Color = clWhite;
        if(txtMovieReleaseDate->Focused()) txtMovieReleaseDate->Color = clYellow;
        else txtMovieReleaseDate->Color = clWhite;
        if(txtMovieFormat->Focused()) txtMovieFormat->Color = clYellow;
        else txtMovieFormat->Color = clWhite;
        if(txtMovieLength->Focused()) txtMovieLength->Color = clYellow;
        else txtMovieLength->Color = clWhite;
        if(txtIsTheMovieRented->Focused()) txtIsTheMovieRented->Color = clYellow;
        else txtIsTheMovieRented->Color = clWhite;
        if(txtLanguage->Focused()) txtLanguage->Color = clYellow;
        else txtLanguage->Color = clWhite;
        if(txtScreenSize->Focused()) txtScreenSize->Color = clYellow;
        else txtScreenSize->Color = clWhite;
        if(txtCondition->Focused()) txtCondition->Color = clYellow;
        else txtCondition->Color = clWhite;
        if(txtUserRating->Focused()) txtUserRating->Color = clYellow;
        else txtUserRating->Color = clWhite;
        if(txtParentalRating->Focused()) txtParentalRating->Color = clYellow;
        else txtParentalRating->Color = clWhite;
        if(txtSalesPrice->Focused()) txtSalesPrice->Color = clYellow;
        else txtSalesPrice->Color = clWhite;
        if(txtRentalPrice->Focused()) txtRentalPrice->Color = clYellow;
        else txtRentalPrice->Color = clWhite;
        if(txtComments->Focused()) txtComments->Color = clYellow;
        else txtComments->Color = clWhite;
}
//---------------------------------------------------------------------------

void __fastcall TfrmMain::cmdExitClick(TObject *Sender)
{
        if(MessageBox(NULL, "Are you sure you want to quit?", "Exiting", MB_YESNO | MB_ICONQUESTION | MB_DEFBUTTON2)==IDYES)
                Application->Terminate();
}
//---------------------------------------------------------------------------

void __fastcall TfrmMain::cmdLogoffClick(TObject *Sender)
{
        if(MessageBox(NULL, "Are you sure you want to log off?", "Logging off", MB_YESNO | MB_ICONQUESTION | MB_DEFBUTTON2)==IDYES){
                frmLogin->Show();
                frmLogin->txtAccount->SetFocus();
                frmMain->Hide();
        }
}
//---------------------------------------------------------------------------



void __fastcall TfrmMain::cmdClearClick(TObject *Sender)
{
        if(MessageBox(NULL, "Are you sure you want to clear ALL fields?", "Start Over?", MB_YESNO | MB_ICONQUESTION | MB_DEFBUTTON2)==IDYES){
                txtComments->Text = "";
                txtIsTheMovieRented->Text = "";
                txtLanguage->Text = "";
                txtMovieArtist->Text = "";
                txtMovieDirector->Text = "";
                txtMovieFormat->Text = "";
                txtMovieLength->Text = "";
                txtMovieName->Text = "";
                txtMovieReleaseDate->Text = "";
                txtParentalRating->Text = "";
                txtRentalPrice->Text = "";
                txtSalesPrice->Text = "";
                txtScreenSize->Text = "";
                txtUserRating->Text = "";
        }
}
//---------------------------------------------------------------------------

