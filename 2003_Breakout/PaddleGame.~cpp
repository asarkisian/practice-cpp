//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop
//---------------------------------------------------------------------------
USEFORM("Main.cpp", frmMain);
USEFORM("About.cpp", frmAbout);
USEFORM("HallOfFameInterface.cpp", frmHallOfFame);
USEFORM("TopScoresGetName.cpp", inputTopScoresPlayersName);
USEFORM("PauseGameScreen.cpp", frmGamePause);
//---------------------------------------------------------------------------
WINAPI WinMain(HINSTANCE, HINSTANCE, LPSTR, int)
{
	try
	{
		Application->Initialize();
		Application->Title = "Breakout 1.0";
		Application->CreateForm(__classid(TfrmMain), &frmMain);
		Application->CreateForm(__classid(TfrmAbout), &frmAbout);
		Application->CreateForm(__classid(TfrmHallOfFame), &frmHallOfFame);
		Application->CreateForm(__classid(TinputTopScoresPlayersName), &inputTopScoresPlayersName);
		Application->CreateForm(__classid(TfrmGamePause), &frmGamePause);
		Application->Run();
	}
	catch (Exception &exception)
	{
		Application->ShowException(&exception);
	}
	catch (...)
	{
		try
		{
			throw Exception("");
		}
		catch (Exception &exception)
		{
			Application->ShowException(&exception);
		}
	}
	return 0;
}
//---------------------------------------------------------------------------
