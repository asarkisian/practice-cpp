#include "Main.h"
#include "GameConstants.h"

extern TfrmMain *frmMain;	//From main.cpp

void __fastcall TfrmMain::readySetGo(){

	TLabel* readyGo = new TLabel(this);
	readyGo->Parent = frmMain;

  readyGo->AutoSize = true;
  readyGo->Top = 240;
	readyGo->Left = 350;

	readyGo->Visible = false;
	readyGo->Caption = "READY SET GO!!!";

	readyGo->Visible = true;
	Sleep(500);
	readyGo->Visible = false;
	Sleep(500);
	readyGo->Visible = true;
	Sleep(500);
	readyGo->Visible = false;
	Sleep(500);
	readyGo->Visible = true;
	Sleep(500);
	readyGo->Visible = false;

	delete readyGo;	
}
 