#include <fstream>
#include <string>
#include "halloffame.h"
#include "encryptFile.h"

void __fastcall hallOfFame::writeDisk()const{

	//Updating the disk file with the brand new top score lists
	std::string tempPlayerOneName(playerOne[0].c_str());
	std::string tempPlayerTwoName(playerTwo[0].c_str());
	std::string tempPlayerThreeName(playerThree[0].c_str());
	std::string tempPlayerFourName(playerFour[0].c_str());
	std::string tempPlayerFiveName(playerFive[0].c_str());
	std::string tempPlayerSixName(playerSix[0].c_str());
	std::string tempPlayerSevenName(playerSeven[0].c_str());
	std::string tempPlayerEightName(playerEight[0].c_str());
	std::string tempPlayerNineName(playerNine[0].c_str());
	std::string tempPlayerTenName(playerTen[0].c_str());

	std::string tempPlayerOneScore(playerOne[1].c_str());
	std::string tempPlayerTwoScore(playerTwo[1].c_str());
	std::string tempPlayerThreeScore(playerThree[1].c_str());
	std::string tempPlayerFourScore(playerFour[1].c_str());
	std::string tempPlayerFiveScore(playerFive[1].c_str());
	std::string tempPlayerSixScore(playerSix[1].c_str());
	std::string tempPlayerSevenScore(playerSeven[1].c_str());
	std::string tempPlayerEightScore(playerEight[1].c_str());
	std::string tempPlayerNineScore(playerNine[1].c_str());
	std::string tempPlayerTenScore(playerTen[1].c_str());

	//Encrypt the players names
	tempPlayerOneName = encryptIt->encryptIt(tempPlayerOneName);
	tempPlayerTwoName = encryptIt->encryptIt(tempPlayerTwoName);
	tempPlayerThreeName = encryptIt->encryptIt(tempPlayerThreeName);
	tempPlayerFourName = encryptIt->encryptIt(tempPlayerFourName);
	tempPlayerFiveName = encryptIt->encryptIt(tempPlayerFiveName);
	tempPlayerSixName = encryptIt->encryptIt(tempPlayerSixName);
	tempPlayerSevenName = encryptIt->encryptIt(tempPlayerSevenName);
	tempPlayerEightName = encryptIt->encryptIt(tempPlayerEightName);
	tempPlayerNineName = encryptIt->encryptIt(tempPlayerNineName);
	tempPlayerTenName = encryptIt->encryptIt(tempPlayerTenName);

	//Encrypt the players scores
	tempPlayerOneScore = encryptIt->encryptIt(tempPlayerOneScore);
	tempPlayerTwoScore = encryptIt->encryptIt(tempPlayerTwoScore);
	tempPlayerThreeScore = encryptIt->encryptIt(tempPlayerThreeScore);
	tempPlayerFourScore = encryptIt->encryptIt(tempPlayerFourScore);
	tempPlayerFiveScore = encryptIt->encryptIt(tempPlayerFiveScore);
	tempPlayerSixScore = encryptIt->encryptIt(tempPlayerSixScore);
	tempPlayerSevenScore = encryptIt->encryptIt(tempPlayerSevenScore);
	tempPlayerEightScore = encryptIt->encryptIt(tempPlayerEightScore);
	tempPlayerNineScore = encryptIt->encryptIt(tempPlayerNineScore);
	tempPlayerTenScore = encryptIt->encryptIt(tempPlayerTenScore);

				//Send info to a brand new file (File creating process)
				ofstream fout;
				fout.open(FILE_NAME, ios::out); //Opens file mode in output mode

						fout << tempPlayerOneName << endl;
						fout << tempPlayerTwoName << endl;
						fout << tempPlayerThreeName << endl;
						fout << tempPlayerFourName << endl;
						fout << tempPlayerFiveName << endl;
						fout << tempPlayerSixName << endl;
						fout << tempPlayerSevenName << endl;
						fout << tempPlayerEightName << endl;
						fout << tempPlayerNineName << endl;
						fout << tempPlayerTenName << endl;

						fout << tempPlayerOneScore << endl;
						fout << tempPlayerTwoScore << endl;
						fout << tempPlayerThreeScore << endl;
						fout << tempPlayerFourScore << endl;
						fout << tempPlayerFiveScore << endl;
						fout << tempPlayerSixScore << endl;
						fout << tempPlayerSevenScore << endl;
						fout << tempPlayerEightScore << endl;
						fout << tempPlayerNineScore << endl;
						fout << tempPlayerTenScore;

				fout.close();
}
